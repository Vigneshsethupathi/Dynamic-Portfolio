<div class="container-fluid contact-page">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 text-center">
            <h1 class="display-4 mb-4">Get in Touch</h1>
            <p class="lead mb-5">We would love to hear from you! Please fill out the form below or feel free to reach out through any of the social channels.</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <form>
                <div class="mb-4">
                    <input type="text" class="form-control" id="name" placeholder="Your Name">
                </div>
                <div class="mb-4">
                    <input type="email" class="form-control" id="email" placeholder="Your Email">
                </div>
                <div class="mb-4">
                    <textarea class="form-control" id="message" rows="6" placeholder="Your Message"></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block py-2">Send Message</button>
            </form>
        </div>
    </div>

    <div class="row justify-content-center mt-5">
        <div class="col-lg-4 col-md-6 text-center">
            <h5 class="mb-3">Our Location</h5>
            <p>123 Main Street, City, Country</p>
            <h5 class="mb-3">Call Us</h5>
            <p>(123) 456-7890</p>
            <h5 class="mb-3">Email Us</h5>
            <p>contact@example.com</p>
        </div>
    </div>
</div>

