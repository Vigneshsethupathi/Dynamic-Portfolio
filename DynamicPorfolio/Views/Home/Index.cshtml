<script>
    var Mecontent = document.getElementById("Mecontent");
    var contentMainDiv = document.querySelector(".me_button_Content");
    var isDropdownVisible = false;
    var isAnimating = false;  // Flag to track if animation is in progress

    document.querySelector(".me_button").addEventListener("click", function (event) {
        event.stopPropagation(); // Prevent click from propagating to the document

        // Prevent toggling if an animation is currently in progress
        if (isAnimating) return;

        this.classList.toggle("Rotate");

        if (isDropdownVisible) {
            closeDropdown();
        } else {
            openDropdown();
        }

        isDropdownVisible = !isDropdownVisible;
    });

    function openDropdown() {
        isAnimating = true; // Animation starts
        Mecontent.style.display = 'block';
        Mecontent.style.animation = "dropdownME 1s ease-in forwards";

        // Mark animation as complete after 1 second (duration of animation)
        setTimeout(() => {
            isAnimating = false; // Animation ends
        }, 1000);
    }

    function closeDropdown() {
        isAnimating = true; // Animation starts
        Mecontent.style.animation = "dropdownMeReverse 1s ease-in forwards";

        setTimeout(() => {
            Mecontent.style.display = 'none';
            isAnimating = false; // Animation ends
        }, 1000);
    }

    // Close the dropdown if a click is detected outside the dropdown area
    document.addEventListener("click", function (event) {
        var button = document.querySelector(".me_button");

        if (!Mecontent.contains(event.target) && !button.contains(event.target) && isDropdownVisible && !isAnimating) {
            closeDropdown();
            button.classList.remove("Rotate");
            isDropdownVisible = false;
        }
    });

</script>