<script>

    document.addEventListener('DOMContentLoaded', function () {
        const languageSelect = document.getElementById('languages');
        const selectedLanguagesInput = document.getElementById('selectedLanguages');
        const languageselectbutton = document.getElementById('languageselectbutton');
       
        // Show input and hide button on focus or click
        languageSelect.addEventListener('mouseover', function () {
            languageselectbutton.style.display = "none";
            languageSelect.style.display = "revert"; // Show the input
        });

        // Show input and hide button on click
        languageselectbutton.addEventListener('click', function () {
            languageselectbutton.style.display = "none";
            languageSelect.style.display = "revert"; 
        });

        // hide input and hide button on click
        languageSelect.addEventListener('mouseleave', function () {
            languageselectbutton.style.display = "revert";
            languageSelect.style.display = "none";
        });

      


       

        // Event listener for when the select element is focused (clicked)
        languageSelect.addEventListener('focus', function () {
            languageSelect.style.height = '150px'; 
            
        });

      
    });
  

    const selectElement = document.getElementById('languages');
    const selectedLanguagesContainer = document.getElementById('selected-languages');

    // Listen for changes in the select element
    selectElement.addEventListener('change', function () {
        const selectedOptions = Array.from(selectElement.selectedOptions); // Get the selected options

        selectedOptions.forEach(option => {
            // Check if the language is already selected (to avoid duplicates)
            if (!isLanguageAlreadySelected(option.value)) {
                addLanguage(option.value); // Add the new language
            }
        });
    });

    // Check if a language is already selected (to avoid duplicates)
    function isLanguageAlreadySelected(language) {
        const selectedItems = Array.from(selectedLanguagesContainer.getElementsByClassName('language-box'));
        return selectedItems.some(item => item.textContent.includes(language));
    }

    // Function to add the selected language to the container
    function addLanguage(language) {
        const languageDiv = document.createElement('div');
        languageDiv.className = 'language-box';
        languageDiv.textContent = language;

        // Create the "X" (remove) button
        const removeBtn = document.createElement('button');
        removeBtn.className = 'remove-btn';
        removeBtn.textContent = 'x'; // This will appear as the "remove" button

        // When the "X" button is clicked, remove the corresponding language
        removeBtn.addEventListener('click', function () {
            selectedLanguagesContainer.removeChild(languageDiv); // Remove the language box
        });

        // Append the "X" button to the language div
        languageDiv.appendChild(removeBtn);

        // Append the new language div to the selected languages container
        selectedLanguagesContainer.appendChild(languageDiv);
    }

</script>