@using DynamicPortfolio.Models
@model List<Project>
<div class="Edit_main_div_project">

    <div class="Edit_menu_project">
        <a style="background-color:transparent; color:white; text-shadow:-2px 0px 3px black;" asp-controller="Admin" asp-action="Edit_Site"><button style="background-color: orange; color:black;">Project's</button></a>
        <span class="hand"><i class="fa-solid fa-hand-point-right"></i></span><br>
        <a asp-controller="Admin" asp-action="Skills_site"> <button> Skill's</button></a><br>
        <a asp-controller="Admin" asp-action="Edit_Site"><button>Contact</button></a><br>
        <a asp-controller="Admin" asp-action="Aboutsite"> <button>About</button></a><br>
        <div class="mini_Detail_box_Project">
            <p>Clicking on the headings "Project," "Skills," "Contact," and "About" opens new tabs with relevant information, offering a comprehensive overview. These tabs provide insights into projects, expertise, and contact details, fostering seamless interaction and understanding. Users can explore project achievements, skill proficiency, and ways to get in touch, enhancing engagement and communication.</p>
        </div>
    </div>

    <div class="Edit_Contents" id="edit_page">
        <div class="methods">
            <a style="background-color:green;" asp-controller="Admin" asp-action="CreateProject"><i class="bi bi-plus-circle"></i> Create</a>

        </div>
        <div class="Project_Edit_Show">
            <div class="project_heading">
                <label>P</label><label>r</label><label>o</label><label>j</label><label>e</label><label>c</label><label>t</label> <label>I</label><label>n</label><label>f</label><label>o</label><label>r</label><label>m</label><label>a</label><label>t</label><label>i</label><label>o</label><label>n</label>
            </div>
            @if (Model.Count() > 0)
            {
                <div class="project_details_page">
                    <table id="table" style="border:none;">
                        <thead class="ProjectInformation_titles">
                            <tr>
                                <td>No</td>
                                <td>Title's</td>
                                <td>Actions</td>
                            </tr>
                        </thead>
                        <tbody class="dbdata_project">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="border:none;">
                                        @{
                                            int index = Model.IndexOf(item) + 1;
                                        }
                                        @index.
                                    </td>

                                    <td class="titls_in_project" style="border:none; text-align:left;"><b>@item.ProjectTittle</b></td>

                                    <td style="border:none; float:right; text-align:right;">
                                        <div class="smart_menus">
                                            <a style="color:red ; box-shadow:0px 1px 5px red" title="Delete" asp-controller="Admin" asp-action="Delete_Project" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this project?');"><i class="bi bi-trash"></i></a>
                                            <a style="color:deepskyblue; box-shadow:0px 1px 5px deepskyblue" title="Go to Detail's" asp-controller="Admin" asp-action="Get_Project" asp-route-id="@item.Id"><i class="bi bi-info-circle"></i></a>
                                            <a style="color:yellow; box-shadow:0px 1px 5px yellow" title="Go to update" asp-controller="Admin" asp-action="Update_Project" asp-route-id="@item.Id"><i class="bi bi-textarea-t"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="no_records_alert">
                    <div class="i_main_div"><div><i class="bi bi-emoji-astonished-fill fa-fade"> </i></div><span></span></div>
                    <hr>No Records Found!...
                </div>
            }


        </div>
    </div>

</div>
<div class="Mini_Menubar_project" id="mini_menuBar"><i class="bi bi-menu-button-wide-fill"></i></div>
<div class="main_Mini_Menubar_project">
    <div class="mini_Edit_menu">
        <a asp-controller="Admin" asp-action="Edit_Site"><button id="Minimenu_B1">Project's</button></a><br>
        <a asp-controller="Admin" asp-action="Skills_site"><button id="Minimenu_B2">Skill's</button></a><br>
        <a asp-controller="Admin" asp-action="Edit_Site"><button id="Minimenu_B3">Contact</button></a><br>
        <a asp-controller="Admin" asp-action="Edit_Site"><button id="Minimenu_B4">About</button></a><br>
        <div class="mini_Detail_box_Project">
            <p>Clicking on the headings "Project," "Skills," "Contact," and "About" opens new tabs with relevant information, offering a comprehensive overview. These tabs provide insights into projects, expertise, and contact details, fostering seamless interaction and understanding. Users can explore project achievements, skill proficiency, and ways to get in touch, enhancing engagement and communication.</p>
        </div>
    </div>
</div>

<script>
    const mini_menuBar = document.querySelector('#mini_menuBar');
    const menubar_Visible = document.querySelector('.mini_Edit_menu');
    const Minimenu_B1 = document.querySelector('#Minimenu_B1 ');
    const Minimenu_B2 = document.querySelector('#Minimenu_B2 ');
    const Minimenu_B3 = document.querySelector('#Minimenu_B3 ');
    const Minimenu_B4 = document.querySelector('#Minimenu_B4 ');
    mini_menuBar.addEventListener("click", function () {
        menubar_Visible.classList.toggle("mini_menubar_visible");
        Minimenu_B1.classList.toggle("animate_the_buttons");
        Minimenu_B2.classList.toggle("animate_the_buttons");
        Minimenu_B3.classList.toggle("animate_the_buttons");
        Minimenu_B4.classList.toggle("animate_the_buttons");
    });

</script>
@section Scripts {
    <script>
        $('.table').DataTable();
    </script>
}